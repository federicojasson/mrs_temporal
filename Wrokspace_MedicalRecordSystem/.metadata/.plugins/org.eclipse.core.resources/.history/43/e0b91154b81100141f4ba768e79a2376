package modules;

import java.io.File;
import java.nio.file.Files;

public class FileManager {
	
	public static void copyStudyFile(String studyId, File studyFile) {
		// TODO: create directories if don't exists
		// TODO: copy file
		
		String pathname = "./";
		
		int size = 4;
		for (int i = 0; i < studyId.length() / size; i += size)
			pathname += studyId.substring(i, i + size) + "/";
		
		File studyFileCopy = new File(pathname);
		
		studyFileCopy.mkdirs();
		
		Files.copy(studyFile.toPath(), studyFileCopy.toPath(), arg2);
	}
	
}
