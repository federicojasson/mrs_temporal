package managers;

public class ErrorManager {
	
	private static Exception exception;
	
	public static void notifyError(Exception exception) {
		ApplicationManager.exception = exception;
		
		// Prints error details
		System.err.println("An error ocurred");
		System.err.println();
		System.err.println("Details");
		System.err.println("--------------------------------");
		exception.printStackTrace();
		
		// Opens an error frame
		GuiManager.openFrame(GuiManager.ERROR_FRAME);
	}
	
}
