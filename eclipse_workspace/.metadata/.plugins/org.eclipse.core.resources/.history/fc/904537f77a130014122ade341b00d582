package workers;

import java.security.NoSuchAlgorithmException;
import java.sql.SQLException;
import javax.swing.SwingWorker;
import utility.Utility;
import modules.UserManager;

public class LoginUserDoctorWorker extends SwingWorker<Void, Void> {
	
	private String id;
	private String passwordString;
	
	public LoginUserDoctorWorker(String id, String passwordString) {
		this.id = id;
		this.passwordString = passwordString;
	}
	
	protected Void doInBackground() {
		// TODO
		
		// Gets the password string bytes
		byte[] password = Utility.getStringBytes(passwordString);
		
		try {
			boolean userDoctorLoggedIn = UserManager.loginUserDoctor(id, password);
		} catch (NoSuchAlgorithmException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return null;
	}
	
}
