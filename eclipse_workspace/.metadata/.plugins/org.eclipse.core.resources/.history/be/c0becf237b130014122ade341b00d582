package workers;

import java.security.NoSuchAlgorithmException;
import java.sql.SQLException;
import javax.swing.SwingWorker;
import utility.Utility;
import modules.UserManager;

public class LoginUserDoctorWorker extends SwingWorker<Boolean, Void> {
	
	private String id;
	private String passwordString;
	
	public LoginUserDoctorWorker(String id, String passwordString) {
		this.id = id;
		this.passwordString = passwordString;
	}
	
	protected Boolean doInBackground() {
		// TODO
		
		// Gets the password string bytes
		byte[] password = Utility.getStringBytes(passwordString);
		
		try {
			return UserManager.loginUserDoctor(id, password);
		} catch (NoSuchAlgorithmException | SQLException exception) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			
			return false;
		}
	}
	
}
