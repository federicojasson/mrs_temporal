package modules;

import java.nio.charset.Charset;
import java.sql.SQLException;
import entities.AuthenticationData;

public class UserManager {
	
	public static boolean loginUserDoctor(String id, String password) throws SQLException {
		// Gets the user authentication data
		AuthenticationData authenticationData = DatabaseManager.getUserDoctorAuthenticationData(id);
		
		if (authenticationData == null)
			// User not found
			return false;
		
		return SecurityManager.authenticateUser(authenticationData, password.getBytes(Charset.forName("UTF-8"))); // TODO: order this
	}
	
}
